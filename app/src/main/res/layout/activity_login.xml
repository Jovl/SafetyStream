<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app=" "
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Fill in All the Applicable Fields"
        android:id="@+id/TopLabel" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/SubmitButton"
        android:onClick="testButton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:id="@+id/LastName"
        android:layout_below="@+id/FirstName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/Address"
        android:hint="Address"
        android:layout_below="@+id/LastName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ZipCode"
        android:hint="Zip Code"
        android:width="125dp"
        android:layout_below="@+id/City"
        android:layout_alignParentStart="true"
        android:maxLength="5"
        android:digits="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Gender"
        android:ems="10"
        android:id="@+id/GenderList"
        android:layout_below="@+id/Race"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Age"
        android:hint="Age"
        android:layout_below="@+id/GenderList"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/OtherNotes"
        android:hint="Other Notes"
        android:singleLine="false"
        android:layout_below="@+id/Age"
        android:layout_alignParentStart="true"
        android:maxLines="3"
        android:minLines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="City"
        android:ems="10"
        android:id="@+id/City"
        android:editable="false"
        android:width="200dp"
        android:layout_below="@+id/Address"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/PhoneNumber"
        android:hint="Phone Number"
        android:maxLength="10"
        android:layout_below="@+id/State"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/State"
        android:hint="State"
        android:width="100dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/City"
        android:layout_toStartOf="@+id/SubmitButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Race"
        android:ems="10"
        android:id="@+id/Race"
        android:layout_below="@+id/PhoneNumber"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/FirstName"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/TopLabel"
        android:layout_alignParentStart="true" />

</RelativeLayout>

